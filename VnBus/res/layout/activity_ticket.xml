<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnacceptticket"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="34dp"
        android:layout_marginLeft="16dp"
        android:text="Mua vé" />

    <Button
        android:id="@+id/btnNoAcceptticket"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnacceptticket"
        android:layout_alignBottom="@+id/btnacceptticket"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:text="Bỏ Qua" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/btnNoAcceptticket"
        android:text="Scan" />

    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/scan_button"
        android:layout_below="@+id/scan_button"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scan_format"
        android:layout_below="@+id/scan_format"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <Button
        android:id="@+id/gps_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scan_content"
        android:layout_below="@+id/scan_content"
        android:layout_marginTop="31dp"
        android:text="GPS" />

    <TextView
        android:id="@+id/txtshowgps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gps_Button"
        android:text="TextView" />

</RelativeLayout>
